.metrics {
  &__title {
    font-size: 24px;
    font-weight: 700;
    color: $text-color;
    @include desktop {
      font-size: 20px;
    }
  }
  &__child {
    &:not(:first-child) {
      margin-top: 41px;
      @include desktopHd {
        margin-top: 33px;
      }
      @include desktop {
        margin-top: 40px;
      }
      @include desktop {
        margin-top: 57px;
      }
    }
  }
  &__list {
    position: relative;
    display: flex;
    margin-top: 45px;
    @include desktopHd {
      margin-top: 2rem;
      justify-content: space-between;
    }
    @include desktop {
      margin-top: 15px;
    }
    @include tablets {
      flex-wrap: wrap;
    }
    &-child {
      &:not(:last-child) {
        margin-right: 70px;
        @include desktopHd {
          margin-right: 0;
        }
      }
      @include tablets {
        &:nth-child(n + 3) {
          margin-top: 8px;
        }
      }
    }
    &-item {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    &-shape {
      width: 140px;
      height: 140px;
      transform: rotate(-180deg);
      @include desktopHd {
        width: 160px;
        height: 160px;
      }
      @include desktop {
        width: 140px;
        height: 140px;
      }
      @include tablets {
        width: 130px;
        height: 130px;
      }
    }
    &-title {
      position: absolute;
      text-align: center;
      width: 110px;
      font-size: 18px;
      font-weight: 700;
      color: $text-color-opacity;
      @include tablets {
        font-size: 16px;
      }
    }
  }
  &__circle {
    fill: none;
    &_before {
      stroke: #eaeaea;
      stroke-width: 10px;
    }
    &_after {
      stroke-width: 20px;
      stroke-dasharray: 400;
      stroke-dashoffset: 400;
      animation: fill 100s linear infinite;
      animation-play-state: paused;
    }
  }
}

@keyframes fill {
  from {
    stroke-dashoffset: 390;
  }

  to {
    stroke-dashoffset: 0;
  }
}
